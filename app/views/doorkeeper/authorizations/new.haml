- provide(:title, "Authorize #{@pre_auth.client.name}")
.container.j2-page
  .row
    .col-md-2
    .col-md-8
      .panel
        .panel-body#oautherize
          .app--profile
            .app--icon.clearfix
              %img.pull-left{src: @pre_auth.client.application.icon.url(:normal)}
              %h1.app--name
                Authorize
                %strong= @pre_auth.client.name
              %h3.app--description
                = @pre_auth.client.application.description
                %br
                %small
                  Managed by
                  = user_screen_name(@pre_auth.client.application.owner)
          %p
            %strong= @pre_auth.client.name
            will be able to:
            %ul
              - @pre_auth.scopes.each do |scope|
                %li{class: "scope--#{scope}"}= t scope, scope: [:doorkeeper, :scopes]
          .row
            = render "button", method: :post, classname: "btn btn-primary btn-expand", text: :Authorize, pre_auth: @pre_auth
            = render "button", method: :delete, classname: "btn btn-danger btn-expand", text: :Deny, pre_auth: @pre_auth
    .col-md-2
